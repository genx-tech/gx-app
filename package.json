{
    "name": "@genx/app",
    "version": "2.0.1",
    "description": "Gen-X micro-service application framework",
    "main": "lib/index.js",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "doc": "jsdoc -c jsdoc.json -t ./node_modules/ink-docstrap/template -R README.md -d './docs' -r --verbose ./src",
        "test:spec": "mocha --recursive src/**/*.spec.js",
        "test:mocha": "mocha test/*.mocha.js",
        "test": "npm run test:spec && npm run test:mocha",
        "cover": "npm run cover:unit && npm run cover:integration && npm run cover:report",
        "cover:unit": "nyc --silent npm run test:spec",
        "cover:integration": "nyc --silent --no-clean npm run test:mocha",
        "cover:report": "nyc report --reporter=html --reporter=text",
        "clean": "del-cli lib .nyc_output coverage",
        "build": "npm run clean && NODE_ENV=production babel src -d lib --ignore \"**/__test__/*.js\" --source-maps --copy-files --no-copy-ignored"
    },
    "author": "Rockie Guo <rockie@kitmi.com.au>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/genx-tech/gx-app.git"
    },
    "bugs": {
        "url": "https://github.com/genx-tech/gx-app/issues"
    },
    "keywords": [
        "genx-suite",
        "app",
        "worker"
    ],
    "mocha": {
        "require": [
            "@babel/register",
            "should"
        ],
        "timeout": 30000
    },
    "nyc": {
        "exclude": [
            "babel.config.js",
            "test",
            "lib",
            "**/*.spec.js"
        ]
    },
    "devDependencies": {
        "@babel/cli": "^7.14.8",
        "@babel/core": "^7.15.0",
        "@babel/plugin-proposal-class-properties": "^7.14.5",
        "@babel/plugin-proposal-decorators": "^7.14.5",
        "@babel/preset-env": "^7.15.0",
        "@babel/register": "^7.15.3",
        "@genx/babelnode": "^7.14.9",
        "@genx/data": "github:genx-tech/gx-data#v2",
        "amqplib": "^0.5.5",
        "babel-plugin-source-map-support": "^2.1.3",
        "capture-console": "^1.0.1",
        "cheerio": "^1.0.0-rc.3",
        "csv-parse": "^4.8.2",
        "deep-freeze": "0.0.1",
        "del-cli": "^4.0.1",
        "fast-file-rotate": "^1.0.1",
        "hyperid": "^2.0.2",
        "imap": "^0.8.19",
        "ink-docstrap": "^1.3.2",
        "minimist": "^1.2.0",
        "mocha": "^9.1.1",
        "mongodb": "^3.3.4",
        "mysql2": "^2.0.0",
        "shelljs": "^0.8.2",
        "shortid": "^2.2.15",
        "soap": "^0.28.0",
        "source-map-support": "^0.5.19",
        "stream-transform": "^2.0.1",
        "twilio": "^3.49.4",
        "uniqid": "^5.2.0",
        "winston-daily-rotate-file": "^3.3.3",
        "winston-elasticsearch": "^0.7.12",
        "winston-mongodb": "^5.0.1"
    },
    "dependencies": {
        "@genx/error": "^1.1.1",
        "@genx/config": "^1.0.0",
        "@genx/july": "^0.3.1",
        "luxon": "^1.28.0",
        "winston": "git+https://github.com/kitmi/winston.git",
        "winstonflight": "^1.0.5"
    },
    "gitHead": "fa2e20a52c6b32955038685358fe5e45a4119734"
}
