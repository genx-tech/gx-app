{
  "name": "@genx/app",
  "version": "1.0.0",
  "description": "Gen-X micro-service application framework",
  "main": "lib/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "doc": "jsdoc -c jsdoc.json -t ./node_modules/ink-docstrap/template -R README.md -d './docs' -r --verbose ./src",
    "test:all": "npm run test:spec && npm run test:mocha",
    "test:spec": "mocha --recursive src/**/*.spec.js",
    "test:mocha": "mocha test/*.mocha.js",
    "test": "npm run build:test && npm run test:all",
    "cover": "npm run build:test && npm run cover:unit && npm run cover:integration && npm run cover:report",
    "cover:unit": "nyc --silent npm run test:spec",
    "cover:integration": "nyc --silent --no-clean npm run test:mocha",
    "cover:report": "nyc report --reporter=html --reporter=text",
    "bulid:clean": "rm -rf lib",
    "build": "npm run bulid:clean && NODE_ENV=development babel src -d lib --copy-files && del lib/**/__test__",
    "build:prod": "npm run bulid:clean && NODE_ENV=production babel src -d lib --copy-files && del lib/**/__test__",
    "build:test": "npm run bulid:clean && NODE_ENV=test babel src -d lib --copy-files && del lib/**/__test__",
    "build:watch": "NODE_ENV=development babel src -w -d lib --copy-files"
  },
  "author": "Rockie Guo <rockie@kitmi.com.au>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/genx-tech/gx-app.git"
  },
  "bugs": {
    "url": "https://github.com/genx-tech/gx-app/issues"
  },
  "keywords": [
    "genx-suite",
    "app",
    "worker"
  ],
  "nyc": {
    "exclude": [
      "babel.config.js",
      "test",
      "src"
    ]
  },
  "devDependencies": {    
    "amqplib": "^0.5.5",
    "capture-console": "^1.0.1",
    "cheerio": "^1.0.0-rc.3",
    "csv-parse": "^4.8.2",
    "fast-file-rotate": "^1.0.1",
    "imap": "^0.8.19",
    "ink-docstrap": "^1.3.2",
    "luxon": "^1.4.3",
    "minimist": "^1.2.0",
    "mongodb": "^3.3.4",
    "mysql2": "^2.0.0",
    "shelljs": "^0.8.2",
    "shortid": "^2.2.15",
    "soap": "^0.28.0",
    "stream-transform": "^2.0.1",
    "winston-daily-rotate-file": "^3.3.3",
    "winston-elasticsearch": "^0.7.12",
    "winston-mongodb": "^5.0.0"
  },
  "dependencies": {
    "async": "^3.1.0",
    "fs-extra": "^8.1.0",
    "rk-config": "^2.0.6",
    "rk-utils": "^2.2.6",
    "winston": "git+https://github.com/kitmi/winston.git",
    "winstonflight": "^1.0.5"
  },
  "gitHead": "fa2e20a52c6b32955038685358fe5e45a4119734"
}
